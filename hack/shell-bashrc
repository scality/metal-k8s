# Only load `~/.bashrc` in interactive shells
if [[ $- == *i* && -r ~/.bashrc ]]; then
    . ~/.bashrc
fi

. @VENV_ACTIVATE@

# Only set up completion in interactive shells
if [[ $- == *i* ]]; then
    if type -t _get_comp_words_by_ref > /dev/null; then
        . <(kubectl completion bash)
        . <(helm completion bash)
    else
        cat 1>&2 << EOF

Shell completion for 'kubectl' and 'helm' not available. Consider installing
the 'bash-completion' package.

EOF
    fi
fi

if [[ (-z "${ANSIBLE_STRATEGY_PLUGINS}") && (-z "${ANSIBLE_STRATEGY}") ]]; then
    export ANSIBLE_STRATEGY_PLUGINS=$(python -c 'import ansible_mitogen.plugins, os.path; print(os.path.dirname(ansible_mitogen.plugins.__file__))')
    export ANSIBLE_STRATEGY=mitogen
fi
